<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/silosCardView"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/siloIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/siloID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightof="@+id/siloIcon "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/siloTipoGrao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightof="@+id/siloIcon "
            android:layout_below="@+id/siloID"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/siloCapacidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/siloTipoGrao"
            android:layout_toRightof="@+id/siloIcon "
            android:textSize="20sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/silosCardView"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardElevation="3sp"
    card_view:cardUseCompatPadding="true">


    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/lt_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!--Bottom view-->
    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bt_prediction"
            android:src="@mipmap/ic_hourglass"
            android:background="@color/colorAccent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/bt_capacity"
            android:src="@mipmap/ic_capacity_64x64"
            android:background="@color/colorAccent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_height="match_parent" />

    </LinearLayout>
    <!--Surface view-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF">

            <ImageView
            android:id="@+id/siloIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_silo"
            android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/siloID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginEnd="8sp"
                android:layout_marginRight="8sp"
                android:layout_gravity="center_vertical" />


        <TextView
                android:id="@+id/siloGraoType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8sp"
            android:layout_marginRight="8sp"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="20sp" />

            <TextView
                android:id="@+id/siloCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

    </com.daimajia.swipe.SwipeLayout>
</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <usjt.graincare.application.GrainCareTextView
            android:id="@+id/tv_relatorio_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="RelatÃ³rio Geral"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_relatorio_title"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <usjt.graincare.application.GrainCareTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:text="@string/informe_periodo"
                android:textSize="18sp" />

            <usjt.graincare.application.GrainCareTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:text="Data Inicial:"
                android:textSize="20sp" />

            <DatePicker
                android:id="@+id/dtPicker_relatorio_inicial"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginStart="30dp" />

            <usjt.graincare.application.GrainCareTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:text="Data Final:"
                android:textSize="20sp" />

            <DatePicker
                android:id="@+id/dtPicker_relatorio_final"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginStart="30dp" />

            <usjt.graincare.application.GrainCareTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:text="Silos"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spn_relatorio_silos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_relatorio_geral"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Gerar" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>
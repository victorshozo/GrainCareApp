<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/beaconCardViews"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <usjt.graincare.application.GrainCareTextView
            android:id="@+id/beaconID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:layout_marginLeft="25sp"
            android:text="ID: 1"
            android:textColor="#000000"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/iv_humidity_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="25sp"
            android:layout_marginLeft="35sp"
            android:src="@drawable/humidity_64x64"
            />
        <usjt.graincare.application.GrainCareTextView
            android:id="@+id/beaconHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:layout_marginLeft="10sp"
            android:text="27%"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_temperature_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="35sp"
            android:layout_marginTop="25sp"
            android:src="@drawable/temperature_64x64"
            />
        <usjt.graincare.application.GrainCareTextView
            android:id="@+id/beaconTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:layout_marginLeft="10sp"
            android:text="32ÂºC"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>